<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_horizontal"
    tools:context="com.akash.exiomstask.Activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:paddingRight="@dimen/margin_horizontal"
            android:text="@string/currnt_location"
            android:textColor="@color/text_black"
            android:minWidth="100dp"/>

        <EditText
            android:id="@+id/et_current"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/background_editetext"
            android:layout_weight="0.50"
            android:maxLines="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_vertical"
        android:paddingTop="@dimen/margin_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.45"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/margin_horizontal"
            android:text="@string/dest_location"
            android:textColor="@color/text_black"
            android:layout_gravity="center_vertical"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.50"
            android:layout_height="40dp"
            android:background="@drawable/background_editetext"
            android:onClick="onClickSpinner">

            <TextView
                android:id="@+id/tv_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="3dp"
                android:paddingRight="10dp"
                android:textColor="@color/text_black"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_drop_down_black_24dp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/btn_start"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/btn_stop"
        android:visibility="invisible" />

</LinearLayout>
